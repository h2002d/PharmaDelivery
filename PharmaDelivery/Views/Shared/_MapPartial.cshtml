<div id="googleMap" style="width:100%;height:400px;"></div>

<script>
    function myMap() {
var mapProp= {
    center: new google.maps.LatLng(40.1829453, 44.51665879999996),
    zoom:13,
};
    var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
    var marker = new google.maps.Marker({
        map:map,
        position: new google.maps.LatLng(40.1829453, 44.51665879999996),
        draggable: true,
        animation: google.maps.Animation.DROP
    });
    marker.addListener('click', toggleBounce);
    //marker.setMap(map);

    }
    function toggleBounce() {
        if (this.getAnimation() !== null) {
            this.setAnimation(null);
        } else {
            this.setAnimation(google.maps.Animation.BOUNCE);
        }
    }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAY1C_FThmFq2jKinamC6mN4h1-Om3VbKk&callback=myMap"></script>
